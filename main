                    Create a custom passcode for your client to access their menu selection page.
                </p>
                <div>
                    <label style="margin-bottom: 8px; display: block;">Menu Passcode</label>
                    <input 
                        type="text" 
                        class="passcode-input" 
                        id="clientPasscode" 
                        placeholder="e.g., EVENT2024"
                        maxlength="20"
                        style="width: 300px; max-width: 100%;"
                    >
                </div>
            </div>
            
            <div class="link-preview">
                <div style="color: #2f855a; font-weight: 600; font-size: 18px; margin-bottom: 15px;">üîó Generated Client Link</div>
                <div class="generated-link" id="generatedLink">
                    https://menus.thecompton.com/client/loading...
                </div>
                <div style="display: flex; gap: 10px; flex-wrap: wrap;">
                    <button style="background: #2f855a; color: white; border: none; padding: 10px 20px; border-radius: 6px; cursor: pointer;" onclick="copyLink()">üìã Copy Link</button>
                    <button style="background: #3182ce; color: white; border: none; padding: 10px 20px; border-radius: 6px; cursor: pointer;" onclick="sendEmail()">üìß Send Email to Client</button>
                    <button style="background: #2f855a; color: white; border: none; padding: 10px 20px; border-radius: 6px; cursor: pointer;" onclick="previewMenu()">üëÅÔ∏è Preview Client View</button>
                </div>
            </div>
            
            <div class="button-container">
                <button type="button" class="btn-secondary" onclick="goToStep3()">‚Üê Back to Configuration</button>
                <button type="button" class="btn-primary final" onclick="generateAndSend()">üöÄ Generate & Send to Client</button>
            </div>
        </div>
    </div>

    <script>
        // App State
        let currentStep = 0;
        let selectedMeals = [];
        let dateCount = 1;
        let clientData = {};
        
        const validCodes = ['4250', '4271', '4272', '4273', '4274', '4275', '4276', '4277', '4278'];
        const stepTitles = ['Access Required', 'Step 1: Client & Event Information', 'Step 2: Select Meal Times', 'Step 3: Configure Service Styles', 'Step 4: Review & Generate Link'];
        const progressWidths = [0, 25, 50, 75, 100];
        
        // Password Check
        function checkPassword() {
            const input = document.getElementById('passwordInput');
            const error = document.getElementById('passwordError');
            const password = input.value;
            
            if (validCodes.includes(password)) {
                input.value = '';
                goToStep1();
            } else {
                input.classList.add('error');
                error.classList.add('show');
                input.value = '';
                
                setTimeout(() => {
                    input.classList.remove('error');
                    error.classList.remove('show');
                }, 2000);
            }
        }
        
        // Navigation Functions
        function showScreen(screenId, step) {
            document.querySelectorAll('.screen').forEach(s => s.classList.remove('active'));
            document.getElementById(screenId).classList.add('active');
            
            document.getElementById('headerSubtitle').textContent = stepTitles[step];
            document.getElementById('progressBar').style.width = progressWidths[step] + '%';
            currentStep = step;
        }
        
        function goToStep1() {
            showScreen('step1Screen', 1);
        }
        
        function goToStep2() {
            if (currentStep === 1) {
                // Capture client data
                clientData = {
                    firstName: document.getElementById('firstName').value,
                    lastName: document.getElementById('lastName').value,
                    company: document.getElementById('company').value,
                    email: document.getElementById('email').value,
                    phone: document.getElementById('phone').value,
                    eventName: document.getElementById('eventName').value,
                    guestCount: document.getElementById('guestCount').value,
                    responseDeadline: document.getElementById('responseDeadline').value,
                    notes: document.getElementById('notes').value,
                    eventDates: Array.from(document.querySelectorAll('input[name="eventDate"]')).map(input => input.value)
                };
                
                // Update day tab with first date
                if (clientData.eventDates[0]) {
                    const date = new Date(clientData.eventDates[0]);
                    const options = { weekday: 'long', month: 'short', day: 'numeric' };
                    document.getElementById('dayTab1').textContent = `Day 1 - ${date.toLocaleDateString('en-US', options)}`;
                }
            }
            
            showScreen('step2Screen', 2);
        }
        
        function goToStep3() {
            generateConfigSections();
            showScreen('step3Screen', 3);
        }
        
        function goToStep4() {
            populateReview();
            showScreen('step4Screen', 4);
        }
        
        // Step 1: Date Management
        function addDate() {
            dateCount++;
            const dateContainer = document.getElementById('dateContainer');
            const dateItem = document.createElement('div');
            dateItem.className = 'date-item';
            dateItem.innerHTML = `
                <div class="date-number">${dateCount}</div>
                <input type="date" class="date-input" name="eventDate" required>
                <button type="button" class="remove-date" onclick="removeDate(this)">Remove</button>
            `;
            dateContainer.appendChild(dateItem);
            setDateMinimums();
        }
        
        function removeDate(button) {
            const dateItem = button.closest('.date-item');
            dateItem.remove();
            
            // Renumber
            const dateItems = document.querySelectorAll('.date-item');
            dateItems.forEach((item, index) => {
                const numberDiv = item.querySelector('.date-number');
                numberDiv.textContent = index + 1;
            });
            
            dateCount = dateItems.length;
        }
        
        function setDateMinimums() {
            const today = new Date().toISOString().split('T')[0];
            document.querySelectorAll('input[type="date"]').forEach(input => {
                input.min = today;
            });
        }
        
        // Step 2: Meal Selection
        function toggleMeal(mealType) {
            const mealCard = event.currentTarget;
            const isSelected = mealCard.classList.contains('selected');
            
            if (isSelected) {
                mealCard.classList.remove('selected');
                selectedMeals = selectedMeals.filter(meal => meal !== mealType);
            } else {
                mealCard.classList.add('selected');
                selectedMeals.push(mealType);
            }
            
            updateMealSummary();
            updateStep2Button();
        }
        
        function updateMealSummary() {
            const container = document.getElementById('selectedMeals');
            
            if (selectedMeals.length === 0) {
                container.innerHTML = '<span style="color: #999; font-style: italic;">No meal times selected yet</span>';
            } else {
                const mealNames = {
                    'breakfast': 'Breakfast',
                    'brunch': 'Brunch', 
                    'lunch': 'Lunch',
                    'break': 'Break',
                    'dinner': 'Dinner',
                    'drinks': 'Drinks'
                };
                
                container.innerHTML = selectedMeals
                    .map(meal => `<span class="meal-tag">${mealNames[meal]}</span>`)
                    .join('');
            }
        }
        
        function updateStep2Button() {
            const btn = document.getElementById('step2Continue');
            btn.disabled = selectedMeals.length === 0;
        }
        
        // Step 3: Generate Configuration Sections
        function generateConfigSections() {
            const container = document.getElementById('configSections');
            container.innerHTML = '';
            
            const mealConfigs = {
                breakfast: { icon: 'üç≥', title: 'Breakfast', styles: ['Breakfast Buffets'] },
                brunch: { icon: 'ü•ê', title: 'Brunch', styles: ['Served Brunch', 'Brunch Buffet'] },
                lunch: { icon: 'ü•ó', title: 'Lunch', styles: ['Lunch Buffets', 'Plated Lunch'] },
                break: { icon: '‚òï', title: 'Break', styles: ['Break Time Packages'] },
                dinner: { icon: 'üçΩÔ∏è', title: 'Dinner', styles: ['Canap√©s', 'Reception', 'Dinner Buffets', 'Plated Dinner', 'Carvings & Stations', 'Evening Sweets'] },
                drinks: { icon: 'üç∑', title: 'Drinks', styles: ['Spirited Packages', 'Hops & Vine', 'Non-Alcoholic'] }
            };
            
            selectedMeals.forEach((meal, index) => {
                const config = mealConfigs[meal];
                const section = document.createElement('div');
                section.className = 'meal-section';
                section.innerHTML = `
                    <div class="meal-header" onclick="toggleConfigSection('${meal}')">
                        <div class="meal-icon" style="width: 40px; height: 40px; background: rgba(255,255,255,0.2); border-radius: 50%; display: flex; align-items: center; justify-content: center; font-size: 18px;">${config.icon}</div>
                        <div class="meal-info">
                            <div style="font-size: 1.4em; font-weight: 600; margin-bottom: 4px;">${config.title}</div>
                            <div style="opacity: 0.8; font-size: 14px;">Configure ${config.title.toLowerCase()} service options</div>
                        </div>
                    </div>
                    
                    <div class="meal-content">
                        <div style="font-weight: 600; color: #333; margin-bottom: 15px; font-size: 16px;">Choose Service Style</div>
                        <div class="style-grid">
                            ${config.styles.map(style => `
                                <div class="style-option" onclick="selectStyle('${meal}', '${style}', this)">
                                    <div style="font-weight: 600; font-size: 16px; margin-bottom: 8px;">${style}</div>
                                    <div style="font-size: 14px; opacity: 0.8; line-height: 1.4;">Professional ${style.toLowerCase()} service</div>
                                </div>
                            `).join('')}
                        </div>
                    </div>
                `;
                
                if (index === 0) {
                    section.classList.add('active');
                }
                
                container.appendChild(section);
            });
        }
        
        function toggleConfigSection(mealId) {
            const sections = document.querySelectorAll('.meal-section');
            sections.forEach(s => s.classList.remove('active'));
            event.currentTarget.closest('.meal-section').classList.add('active');
        }
        
        function selectStyle(meal, style, element) {
            const siblings = element.parentNode.querySelectorAll('.style-option');
            siblings.forEach(sibling => sibling.classList.remove('selected'));
            element.classList.add('selected');
        }
        
        // Step 4: Populate Review
        function populateReview() {
            document.getElementById('reviewClientName').textContent = `${clientData.firstName} ${clientData.lastName}`;
            document.getElementById('reviewEventName').textContent = clientData.eventName;
            document.getElementById('reviewEmail').textContent = clientData.email;
            document.getElementById('reviewGuestCount').textContent = `${clientData.guestCount} guests`;
            document.getElementById('reviewDeadline').textContent = new Date(clientData.responseDeadline).toLocaleDateString();
            document.getElementById('reviewDates').textContent = clientData.eventDates.map(date => 
                new Date(date).toLocaleDateString()
            ).join(', ');
            
            // Generate unique link
            const eventSlug = clientData.eventName.toLowerCase().replace(/[^a-z0-9]+/g, '-');
            const token = Math.random().toString(36).substring(2, 15);
            document.getElementById('generatedLink').textContent = 
                `https://menus.thecompton.com/client/${eventSlug}/select?token=${token}`;
            
            // Set default passcode
            const year = new Date().getFullYear();
            const defaultPasscode = clientData.eventName.split(' ')[0].toUpperCase() + year;
            document.getElementById('clientPasscode').value = defaultPasscode;
        }
        
        // Final Actions
        function copyLink() {
            const link = document.getElementById('generatedLink').textContent;
            navigator.clipboard.writeText(link).then(() => {
                alert('Link copied to clipboard! üìã');
            });
        }
        
        function sendEmail() {
            const passcode = document.getElementById('clientPasscode').value;
            if (!passcode.trim()) {
                alert('Please set a menu passcode first!');
                return;
            }
            alert(`Opening email composer with passcode "${passcode}" included...`);
        }
        
        function previewMenu() {
            const passcode = document.getElementById('clientPasscode').value;
            if (!passcode.trim()) {
                alert('Please set a menu passcode first!');
                return;
            }
            alert(`Opening client preview with passcode "${passcode}"`);
        }
        
        function generateAndSend() {
            const passcode = document.getElementById('clientPasscode').value;
            if (!passcode.trim()) {
                alert('Please set a menu passcode first!');
                return;
            }
            
            if (confirm(`Generate and send menu link to ${clientData.firstName} ${clientData.lastName}?\n\nPasscode: ${passcode}`)) {
                alert(`üéâ Success! Menu link sent to ${clientData.email} with passcode "${passcode}"`);
            }
        }
        
        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            document.getElementById('passwordInput').focus();
            setDateMinimums();
            
            document.getElementById('passwordInput').addEventListener('keypress', function(e) {
                if (e.key === 'Enter') checkPassword();
            });
        });
    </script>
</body>
</html>
